{
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tsconfig.spec.json"
    },
    "__TRANSFORM_HTML__": true
  },
  "preset": "<rootDir>/node_modules/jest-preset-angular",
  "rootDir": "./../../",
  "roots": [
    "<rootDir>/libs/forms/"
  ],
  "testMatch": ["**/*.spec.ts"],
  "testURL": "http://localhost",
  "collectCoverage":true,
  "collectCoverageFrom": [
    "**/*.{ts}",
    "!**/polyfills.ts",
    "!**/test.ts",
    "!**/index.ts",
    "!**/jest/**",
    "!**/public-api.ts",
    "!**/tests/**"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/jest/setupJest.ts"
}
